<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/car_dialog"
    android:gravity="center">

    <ImageView
        android:id="@+id/dialog_img"
        android:layout_width="@dimen/w_890"
        android:layout_height="@dimen/h_522"
        android:scaleType="centerCrop"
        android:src="@drawable/main_bg" />

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="@dimen/w_890"
        android:layout_height="@dimen/h_76"
        android:layout_alignBottom="@+id/dialog_img"
        android:background="#805b554f"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/w_20"
        android:text="高级鲜嫩牛排"
        android:textColor="@color/white"
        android:textSize="@dimen/w_32" />


    <RelativeLayout
        android:layout_width="@dimen/w_890"
        android:layout_height="@dimen/h_76"
        android:layout_below="@+id/dialog_img"
        android:background="#70f53131">

        <Button
            android:id="@+id/dialog_left"
            android:layout_width="@dimen/w_27"
            android:layout_height="@dimen/h_26"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_20"
            android:background="@drawable/dialog_car_left_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_76"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/dialog_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/w_60"
                android:text="＄:128.00"
                android:textColor="@color/white"
                android:textSize="@dimen/w_32" />

            <TextView
                android:id="@+id/dialog_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×2"
                android:textColor="@color/white"
                android:textSize="@dimen/w_32" />

        </LinearLayout>


        <Button
            android:id="@+id/dialog_right"
            android:layout_width="@dimen/w_27"
            android:layout_height="@dimen/h_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_20"
            android:background="@drawable/dialog_car_right_icon" />

    </RelativeLayout>

</RelativeLayout>