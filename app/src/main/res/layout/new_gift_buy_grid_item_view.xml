<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/w_332"
        android:layout_height="@dimen/h_452"
        android:layout_marginBottom="@dimen/h_42"
        android:background="@drawable/gift_buy_grid_item_back">

        <ImageView
            android:id="@+id/gift_buy_grid_item_img"
            android:layout_width="@dimen/w_326"
            android:layout_height="@dimen/h_318"
            android:layout_marginLeft="@dimen/w_3"
            android:layout_marginRight="@dimen/w_3"
            android:layout_marginTop="@dimen/h_3"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/gift_buy_grid_item_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gift_buy_grid_item_img"
            android:layout_marginLeft="@dimen/w_16"
            android:layout_marginRight="@dimen/w_16"
            android:layout_marginTop="@dimen/h_21"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="#575757"
            android:textSize="@dimen/w_32" />


        <TextView
            android:id="@+id/gift_buy_grid_item_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gift_buy_grid_item_name_text"
            android:layout_marginLeft="@dimen/w_16"
            android:layout_marginTop="@dimen/h_13"
            android:textColor="#e93a3a"
            android:textSize="@dimen/w_32" />

        <TextView
            android:id="@+id/gift_buy_grid_item_sales_volume_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gift_buy_grid_item_price_text"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/gift_buy_grid_item_name_text"
            android:layout_marginRight="@dimen/w_8"
            android:layout_marginTop="@dimen/h_21"
            android:alpha="0.8"
            android:textColor="#575757"
            android:textSize="@dimen/w_24" />

        <ImageView
            android:layout_width="@dimen/w_326"
            android:layout_height="@dimen/h_318"
            android:src="@drawable/gift_buy_grid_item_back_top" />
    </RelativeLayout>


</LinearLayout>
