<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/muti_screen_bg">

    <include
        android:id="@+id/ll_title"
        layout="@layout/hotel_general_title" />

    <ImageView
        android:id="@+id/photoView"
        android:layout_width="@dimen/w_1533"
        android:layout_height="@dimen/h_756"
        android:layout_below="@+id/ll_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/h_32"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/ll_tips"
        android:layout_width="@dimen/w_352"
        android:layout_height="@dimen/h_152"
        android:layout_alignRight="@+id/photoView"
        android:layout_alignTop="@+id/photoView"
        android:background="@drawable/near_map_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_subway_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_28"
            android:layout_marginRight="@dimen/w_28"
            android:lineSpacingExtra="@dimen/h_10"
            android:maxLines="3"
            android:textColor="#575757"
            android:textSize="@dimen/w_20" />

        <TextView
            android:id="@+id/tv_subway_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_28"
            android:layout_marginTop="@dimen/h_15"
            android:text="运营时间:06:30~11:30"
            android:textColor="#575757"
            android:textSize="@dimen/w_20" />

        <TextView
            android:id="@+id/tv_subway_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_28"
            android:layout_marginTop="@dimen/h_15"
            android:text="咨询电话:0755 88960600"
            android:textColor="#575757"
            android:textSize="@dimen/w_20" />
    </LinearLayout>

    <include
        android:id="@+id/ll_toast"
        layout="@layout/general_down_toast" />
</RelativeLayout>
