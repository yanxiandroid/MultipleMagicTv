<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_60"
    android:layout_marginBottom="@dimen/h_100"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_image_bg"
        android:layout_width="@dimen/w_4"
        android:layout_height="@dimen/h_32"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/w_52"
        android:src="@drawable/gift_selected_bg"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/type_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_60"
        android:layout_marginLeft="@dimen/w_72"
        android:layout_toRightOf="@+id/iv_image_bg"
        android:textColor="#90ffffff"
        android:textSize="@dimen/w_36" />


</RelativeLayout>