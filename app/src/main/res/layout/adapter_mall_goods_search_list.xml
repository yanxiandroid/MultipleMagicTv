<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_type1"
        android:layout_width="@dimen/w_749"
        android:layout_height="@dimen/h_278"
        android:background="#ebffffff"
        >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/w_278"
            android:layout_height="@dimen/h_272"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/w_3"
            android:layout_marginTop="@dimen/h_3"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/w_32"
            android:textColor="#575757"
            android:text="标题标题标题标题"
            android:layout_marginLeft="@dimen/w_35"
            android:layout_toRightOf="@+id/iv_photo"
            android:layout_marginTop="@dimen/h_10"
            />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/w_32"
            android:textColor="#e93a3a"
            android:text="￥1999"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/h_25"
            />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/w_32"
            android:textColor="#e93a3a"
            android:text="这是商品描述这是商品描述这是商品描述这是商品描述这是商品描述这是商品描述"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@+id/tv_price"
            android:maxLines="3"
            android:layout_marginTop="@dimen/h_25"
            />

    </RelativeLayout>
    
    
    <TextView
        android:id="@+id/tv_title_type2"
        android:layout_width="@dimen/w_749"
        android:layout_height="@dimen/h_135"
        android:text="标题标题标题标题"
        android:gravity="center_vertical"
        android:textColor="#80ffffff"
        android:textSize="@dimen/w_36"
        />

</LinearLayout>