<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_76"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_station"
            android:layout_width="@dimen/w_650"
            android:layout_height="@dimen/h_76"
            android:gravity="left"
            android:paddingLeft="@dimen/w_100"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="华北汽车站-广州汽车站"
            android:textColor="#fff"
            android:textSize="@dimen/w_34" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/w_450"
            android:layout_height="@dimen/h_76"
            android:focusable="false"
            android:gravity="left"
            android:paddingLeft="@dimen/w_80"
            android:text="07:25-09:48"
            android:textColor="#fff"
            android:textSize="@dimen/w_34" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/w_400"
            android:layout_height="@dimen/h_76"
            android:gravity="left"
            android:paddingLeft="@dimen/w_80"
            android:text="大型高一座"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="#fff"
            android:textSize="@dimen/w_34" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="@dimen/w_350"
            android:layout_height="@dimen/h_76"
            android:focusable="false"
            android:gravity="left"
            android:paddingLeft="@dimen/w_100"
            android:text="70.00元"
            android:textColor="#fff"
            android:textSize="@dimen/w_34" />


    </LinearLayout>


</LinearLayout>