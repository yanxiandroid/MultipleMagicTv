<?xml version="1.0" encoding="utf-8"?>
<com.open.androidtvwidget.view.RelativeMainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#66000000">

    <include
        android:id="@+id/guide_info"
        layout="@layout/general_main_info" />

    <com.owen.tvrecyclerview.widget.TvRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_140"
        android:orientation="horizontal"
        app:tv_layoutManager="ListLayoutManager"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/h_120"
        />


    <include
        android:id="@+id/press_info"
        layout="@layout/general_down_info"
        />

</com.open.androidtvwidget.view.RelativeMainLayout>