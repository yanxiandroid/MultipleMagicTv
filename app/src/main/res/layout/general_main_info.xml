<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/h_100"
    android:layout_marginLeft="@dimen/w_64"
    android:layout_marginTop="@dimen/h_16">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/w_92"
        android:layout_height="@dimen/h_92"
        android:layout_centerVertical="true"
        android:src="@drawable/hotel_phone_icon"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_logo"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hotel_name_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_logo"
            android:layout_marginLeft="@dimen/w_14"
            android:text="Magic TV"
            android:textColor="#fff"
            android:textSize="@dimen/w_38" />

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w_14"
            android:text="悦享TV"
            android:textColor="#fff"
            android:textSize="@dimen/w_26" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/w_64"
        android:textColor="#fff"
        android:textSize="@dimen/w_68" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/w_2"
        android:layout_height="@dimen/h_50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/w_14"
        android:layout_marginRight="@dimen/w_14"
        android:layout_toLeftOf="@+id/tv_time"
        android:background="#fff" />

    <LinearLayout
        android:id="@+id/ll_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/view"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/w_30" />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/w_30" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weather"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/w_20"
        android:layout_toLeftOf="@+id/ll_current_time"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_weather_icon"
            android:layout_width="@dimen/w_100"
            android:layout_height="@dimen/h_100"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_10" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_tmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="@dimen/w_30" />

            <TextView
                android:id="@+id/tv_weather_cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w_10"
                android:layout_toRightOf="@+id/tv_weather_tmp"
                android:textColor="#fff"
                android:textSize="@dimen/w_30" />


            <TextView
                android:id="@+id/tv_weather_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_weather_tmp"
                android:textColor="#fff"
                android:textSize="@dimen/w_30" />

            <TextView
                android:id="@+id/tv_weather_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_weather_tmp"
                android:layout_marginLeft="@dimen/w_10"
                android:layout_toRightOf="@+id/tv_weather_wind"
                android:textColor="#fff"
                android:textSize="@dimen/w_30" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/w_2"
            android:layout_height="@dimen/h_50"
            android:layout_marginLeft="@dimen/w_14"
            android:background="#fff" />
    </LinearLayout>

</RelativeLayout>
